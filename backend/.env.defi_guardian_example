# DeFi Guardian Swarm Configuration
# Add these variables to your .env file in the backend/ directory

# === DeFi Guardian Swarm Configuration ===
# OpenAI Configuration (Required for LLM-powered agents)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# === Risk Management Thresholds ===
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5
RISK_THRESHOLD_LOW=0.2

# === MEV Protection Settings ===
MEV_SLIPPAGE_TOLERANCE=0.01
MEV_GAS_PRICE_MULTIPLIER=1.2
MEV_MAX_DELAY_SECONDS=30

# === Governance Settings ===
GOVERNANCE_MIN_VOTING_POWER=1000
GOVERNANCE_QUORUM_THRESHOLD=0.4

# === Telegram Bot Configuration (Optional for alerts) ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === Solana Configuration (Optional for on-chain integration) ===
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WALLET_PRIVATE_KEY=your_solana_private_key_here

# === Monitoring & Alerts ===
ALERT_COOLDOWN_MINUTES=5
MONITORING_INTERVAL_SECONDS=10

# === Development Settings ===
DEBUG_MODE=true
LOG_LEVEL=INFO
